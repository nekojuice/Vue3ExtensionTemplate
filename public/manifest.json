{
    "manifest_version": 3,
    "name": "Vue 3 Browser Extension Template",
    "version": "1.0",
    "description": "A browser extension built with Vue 3",
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}